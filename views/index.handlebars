<h1>McB's Burgers!</h1>

<h2></h2>

<ul>
  {{#each burgers}}
    {{#unless this.finished}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          
          <button type="submit">Fry up this burger!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Finished burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.finished}}
      <li>
        {{this.burger_name}}

        <form action="cats/update/{{this.id}}?_method=PUT" method="POST">
          

        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>